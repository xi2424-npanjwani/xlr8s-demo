{
    "vars": [
        {
            "section": "Basic Detail",
            "sectionDec": "Basic Details",
            "expand": true,
            "type": "input_block",
            "id": "basic_Detail",
            "fields": [
                {
                    "component": "input",
                    "label": "Name",
                    "type": "text",
                    "required": true,
                    "defaultValue": "istio",
                    "id": "name",
                    "hint": "add istio name",
                    "store": "name"
                },
                {
                    "component": "input",
                    "label": "Namespace",
                    "type": "text",
                    "required": true,
                    "defaultValue": "istio-system",
                    "id": "namespace",
                    "hint": "add namespace",
                    "store": "namespace"
                },
                {
                    "component": "singleSelect",
                    "label": "Profile",
                    "type": "select",
                    "defaultValue": "demo",
                    "id": "profile",
                    "hint": "select istio profile ",
                    "store": "profile",
                    "options": [
                        {
                            "value": "demo",
                            "label": "Demo"
                        },
                        {
                            "value": "default",
                            "label": "Default"
                        },
                        {
                            "value": "Minimal",
                            "label": "minimal"
                        },
                        {
                            "value": "external",
                            "label": "External"
                        },
                        {
                            "value": "empty",
                            "label": "Empty"
                        },
                        {
                            "value": "preview",
                            "label": "Preview"
                        }
                    ]
                },
                {
                    "component": "field_group",
                    "header": "Hub & Tag",
                    "id": "hub-tag",
                    "fields": [
                        {
                            "component": "input",
                            "label": "Hub",
                            "type": "text",
                            "defaultValue": "gcr.io/istio-release",
                            "id": "hub",
                            "hint": "enter hub",
                            "store": "hub"
                        },
                        {
                            "component": "input",
                            "label": "Tag",
                            "type": "text",
                            "defaultValue": "1.11.4",
                            "id": "tag",
                            "hint": "enter tag",
                            "store": "tag"
                        }
                    ]
                },
                {
                    "component": "field_group",
                    "header": "Istio Operator - Hub & Tag",
                    "id": "istio-operator-hub-tag",
                    "fields": [
                        {
                            "component": "input",
                            "label": "Hub",
                            "type": "text",
                            "defaultValue": "gcr.io/istio-release",
                            "id": "istio-operator.hub",
                            "hint": "enter hub",
                            "store": "istio-operator.hub"
                        },
                        {
                            "component": "input",
                            "label": "Tag",
                            "type": "text",
                            "defaultValue": "1.11.4",
                            "id": "istio-operator.tag",
                            "hint": "enter tag",
                            "store": "istio-operator.tag"
                        }
                    ]
                }
            ]
        },
        {
            "section": "Ingress Configuration",
            "sectionDec": "Ingress Configuration",
            "expand": true,
            "type": "input_block",
            "id": "ingress_configuration",
            "fields": [
                {
                    "component": "singleSelect",
                    "label": "Istio Ingress Gateway Type",
                    "type": "select",
                    "defaultValue": "LoadBalancer",
                    "id": "gateways.istioIngressgateway.type",
                    "hint": "select istio ingress gateway type",
                    "store": "gateways.istioIngressgateway.type",
                    "options": [
                        {
                            "value": "LoadBalancer",
                            "label": "LoadBalancer"
                        }
                    ]
                },
                {
                    "component": "toggle",
                    "label": "Enable Ingress Gateway",
                    "type": "button",
                    "defaultValue": false,
                    "id": "ingressForIngressGateway.enabled",
                    "hint": "Enable ingress gateway",
                    "store": "ingressForIngressGateway.enabled",
                    "option": [
                        {
                            "label": "False",
                            "value": false
                        },
                        {
                            "label": "True",
                            "value": true
                        }
                    ]
                },
                {
                    "component": "object_group",
                    "header": "Annotations",
                    "id": "ingressForIngressGateway.annotations",
                    "store": "ingressForIngressGateway.annotations",
                    "defaultValue": {},
                    "fields": {
                        "key": {
                            "component": "input",
                            "label": "Key",
                            "type": "text",
                            "required": true,
                            "defaultValue": "",
                            "id": "annotation_key",
                            "hint": "add key here",
                            "store": "key"
                        },
                        "value": {
                            "component": "input",
                            "label": "value",
                            "type": "text",
                            "required": true,
                            "defaultValue": "",
                            "id": "annotation_value",
                            "hint": "add value here",
                            "store": "value"
                        }
                    }
                },
                {
                    "component": "rawInput",
                    "label": "Ingres Gateway Rules",
                    "defaultValue": [
                        {
                            "http": {
                                "paths": [
                                    {
                                        "pathType": "Prefix",
                                        "path": "/",
                                        "backend": {
                                            "service": {
                                                "name": "istio-ingressgateway",
                                                "port": {
                                                    "number": 80
                                                }
                                            }
                                        }
                                    }
                                ]
                            }
                        }
                    ],
                    "id": "ingressForIngressGateway.rules",
                    "hint": "Ingress Gateway Rules",
                    "store": "ingressForIngressGateway.rules"
                }
            ]
        }
    ]
}